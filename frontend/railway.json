{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/_health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "npx serve -s build -l $PORT"
  }
} 